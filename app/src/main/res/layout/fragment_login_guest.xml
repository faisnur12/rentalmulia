<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_guest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivGuest"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_guest_user"
        android:contentDescription="Guest Illustration"
       android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tvGuestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda belum login"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ivGuest"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvGuestDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Silakan login untuk melihat profil Anda, riwayat transaksi, dan pengaturan lainnya."
        android:textColor="@color/gray_dark"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvGuestTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp" />

    <Button
        android:id="@+id/btnLoginNow"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Login Sekarang"
        android:textAllCaps="false"
        android:backgroundTint="@color/red_primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvGuestDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
