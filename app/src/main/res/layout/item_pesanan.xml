<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgMobil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sample_mobil"
            android:background="@drawable/bg_image_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvNamaMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanza Veloz"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 - 15 Juni 2025"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah Dibayar"
                android:textSize="14sp"
                android:textColor="#2E7D32"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: Rp 1.200.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnBatalkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batalkan Sewa"
                android:layout_marginTop="6dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red_primary"
                android:visibility="gone"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
